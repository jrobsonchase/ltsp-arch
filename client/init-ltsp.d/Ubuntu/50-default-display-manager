# Prevent other display managers from starting
if [ -f /etc/X11/default-display-manager ]; then
    # Set DEFAULT_DISPLAY_MANAGER="" in lts.conf to leave the existing one
    DEFAULT_DISPLAY_MANAGER=${DEFAULT_DISPLAY_MANAGER-/usr/sbin/ldm}
    if [ -n "$DEFAULT_DISPLAY_MANAGER" ]; then
        echo "$DEFAULT_DISPLAY_MANAGER" > /etc/X11/default-display-manager
    fi
fi

