# This script adds the ability to force a particular driver's video memory 
# using the X_VIDEO_RAM lts.conf var

device_hacks="$device_hacks set_videoram"

if [ -n "${X_VIDEO_RAM}" ]; then
    CONFIGURE_X="True"
fi

set_videoram() {
    if [ -n "${X_VIDEO_RAM}" ]; then
        echo "        VideoRam \"${X_VIDEO_RAM}\"" >> ${XCONF}
    fi
}
