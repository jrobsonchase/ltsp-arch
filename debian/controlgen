#!/bin/sh

set -e

basedir=$(dirname $0)

VENDOR="$(lsb_release --short --id)"
. $basedir/control.$VENDOR

sed -e "s%MAINTAINER%$MAINTAINER%g" \
    -e "s%UPLOADERS%$UPLOADERS%g" \
    -e "s%LTSP_SERVER_DEPENDS%$LTSP_SERVER_DEPENDS%g" \
    -e "s%LTSP_SERVER_RECOMMENDS%$LTSP_SERVER_RECOMMENDS%g" \
    -e "s%LTSP_SERVER_SUGGESTS%$LTSP_SERVER_SUGGESTS%g" \
    -e "s%LTSP_SERVER_STANDALONE_DEPENDS%$LTSP_SERVER_STANDALONE_DEPENDS%g" \
    -e "s%LTSP_SERVER_STANDALONE_RECOMMENDS%$LTSP_SERVER_STANDALONE_RECOMMENDS%g" \
    -e "s%LTSP_CLIENT_CORE_DEPENDS%$LTSP_CLIENT_CORE_DEPENDS%g" \
    -e "s%LTSP_CLIENT_CORE_SUGGESTS%$LTSP_CLIENT_CORE_SUGGESTS%g" \
    -e "s%LTSP_CLIENT_DEPENDS%$LTSP_CLIENT_DEPENDS%g" \
    -e "s%LTSP_CLIENT_RECOMMENDS%$LTSP_CLIENT_RECOMMENDS%g" \
    -e "s%LTSP_CLIENT_SUGGESTS%$LTSP_CLIENT_SUGGESTS%g" \
    -e "s%LDM_DEPENDS%$LDM_DEPENDS%g" \
    -e "s%BZR_URL%$BZR_URL%g" \
    $basedir/control.in > $basedir/control
