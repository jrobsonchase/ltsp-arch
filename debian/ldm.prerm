#! /bin/sh
set -e

#DEBHELPER#

case "$1" in
  remove|deconfigure|failed-upgrade)
    update-alternatives --remove ldm-theme \
	/usr/share/ldm/themes/ubuntu
    update-alternatives --remove ldm-theme \
	/usr/share/ldm/themes/edubuntu
    update-alternatives --remove ldm-theme \
	/usr/share/ldm/themes/Debian
    update-alternatives --remove ldm-theme \
	/usr/share/ldm/themes/Debian-Edu
  ;;
esac
