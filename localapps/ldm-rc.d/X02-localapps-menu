# Generate the localapp menu

if boolean_is_true "$LOCAL_APPS" && boolean_is_true "$LOCAL_APPS_MENU"; then
    [ -x "/usr/bin/ltsp-genmenu" ] && su - ${LDM_USERNAME} -c "LOCAL_APPS_MENU_ITEMS=${LOCAL_APPS_MENU_ITEMS} LDM_SOCKET=${LDM_SOCKET} LDM_SERVER=${LDM_SERVER} TMP_XDG_DIR=${TMP_XDG_DIR} /usr/bin/ltsp-genmenu install"
fi
