is_yes()
{
    case "$1" in
	yes|Yes|YES|true|True|TRUE|on|On|ON|Y|y|T|t|1) return 0 ;;
	*) return 1 ;;
    esac
}

is_no()
{
    case "$1" in
	no|No|NO|false|False|FALSE|off|Off|OFF|N|n|F|f0) return 0 ;;
	*) return 1 ;;
    esac
}

MemInfo()
{
    sed -n '/^'$1':/ s/^'$1': *\([[:digit:]]*\).*$/\1/p' /proc/meminfo
}
