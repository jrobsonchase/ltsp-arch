case "$MODE" in
    after-install)
        # Disable services we don't want
        for service in gpm mcstrans mdmonitor pcscd rsyslog; do
            if [ ! -e $ROOT/etc/init.d/$service ]; then
                continue
            fi
            echo "Disabling Service: $service"
            chroot $ROOT /sbin/chkconfig $service off
        done
        # Enable services we do want
        for service in ltsp-client-launch; do
            if [ ! -e $ROOT/etc/init.d/$service ]; then
                continue
            fi
            echo "Enabling Service: $service"
            chroot $ROOT /sbin/chkconfig $service on
        done
        ;;
esac
