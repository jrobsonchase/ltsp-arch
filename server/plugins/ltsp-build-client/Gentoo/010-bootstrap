case "$MODE" in
	install)
		# Install base packages
		BASE_PACKAGES="glibc dhcpcd udev coreutils gzip gcc less openssh nano
			util-linux psmisc procps debianutils diffutils findutils gawk grep
			kbd net-tools iputils wget tar cpio bzip2 virtual/modutils
			syslog-ng which"
		if [ -n "$EXCLUDE" ] ; then
			for i in $BASE_PACKAGES; do
				for j in $EXCLUDE; do
					if [ "$i" = "$j" ]; then
						continue 2
					fi
				done
				BASE_PACKAGES_FINAL="$BASE_PACKAGES_FINAL $i"
			done
		fi
		if [ -n "$INCLUDE" ] ; then
			for i in $INCLUDE; do
				BASE_PACKAGES_FINAL="$BASE_PACKAGES_FINAL $i"
			done
		fi
		$EMERGE $BASE_PACKAGES_FINAL
		USE="bootstrap" $EMERGE baselayout
		;;
esac
