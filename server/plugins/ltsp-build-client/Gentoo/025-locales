case $MODE in
    commandline)
        add_option "locale" "`eval_gettext "Set the default locale"`" "advanced" "false"
        ;;
    configure)
        if [ -n "$option_locale_value" ]; then
            LOCALE="$option_locale_value"
        fi
        ;;
    install)
        if [ -z "$LOCALE" ]; then
            LOCALE="$LANG"
        fi
        # Respects ROOT
        locale-gen $LOCALE

        if [ -f /etc/env.d/02locale ]; then
            cp /etc/env.d/02locale $ROOT/etc/env.d/
        else
            echo "LANG=$LOCALE" >> $ROOT/etc/env.d/02locale
        fi
        export LANG="$LOCALE"
        ;;
esac
