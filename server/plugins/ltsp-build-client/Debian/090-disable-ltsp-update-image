case "$MODE" in
    finalization)
        if [ "True" != "$SQUASHFS_IMAGE" ] && [ -z "$FS_IMAGE_TYPE" ]; then
            mkdir -p /etc/ltsp/
            echo '# ltsp-update-image disabled, as LTSP is currently configured to use NFS.' >> /etc/ltsp/ltsp-update-image.conf
            echo '# remove or comment out the following to enable it.' >> /etc/ltsp/ltsp-update-image.conf
            echo 'LTSP_UPDATE_IMAGE_DISABLED=True' >> /etc/ltsp/ltsp-update-image.conf
        fi
        ;;
esac
