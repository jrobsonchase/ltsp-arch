case "$MODE" in
    finalization)
	    # create default lts.conf
        cat <<EOF > $ROOT/etc/lts.conf
# This is the default lts.conf file for ltsp 5.  For more information about
# valid options please see lts.conf(5) man page, available in the ltsp-docs
# package.

[default] 
    LTSP_CONFIG=True
    #SOUND=False
    #LOCALDEV=False
    #CONFIGURE_X=False
EOF
        ;;
esac
