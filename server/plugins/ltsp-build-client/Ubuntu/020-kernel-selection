case "$MODE" in
    before-install)
	case $ARCH in
	    i386)
		KERNEL_ARCH="386" # this is temporary and shall be 386 again
		;;
	    amd64)
		KERNEL_ARCH="generic"
		;;
	    sparc) 
		KERNEL_ARCH="$(uname -m)"
		;;
	    *)
		KERNEL_ARCH="$ARCH"
		;;
	esac
	LATE_PACKAGES="$LATE_PACKAGES linux-image-$KERNEL_ARCH"
	;;
esac
