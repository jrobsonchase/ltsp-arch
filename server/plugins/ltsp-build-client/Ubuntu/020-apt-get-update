case "$MODE" in
    after-install)
        export APT_GET_OPTS="$APT_GET_OPTS -o Acquire::gpgv::Options::=--ignore-time-conflict"
        if [ -n "$http_proxy" ]; then
            echo "Acquire::http::Proxy \"${http_proxy}\";" > $ROOT/etc/apt/apt.conf.d/proxy
        fi
        chroot $ROOT apt-get $APT_GET_OPTS update
        ;;
esac
