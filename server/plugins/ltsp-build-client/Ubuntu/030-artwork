case "$MODE" in
    finalization)
        desktops=$(dpkg -l | sed -n 's/^ii *\(.*buntu-desktop\).*/\1/p' |
            grep -v '^ubuntu-desktop$')
        for d in $desktops ubuntu-desktop; do
            name=${d%-desktop}
            if chroot "$ROOT" apt-get $APT_GET_OPTS install ldm-$name-theme; then
                return
            fi
        done
    ;;
esac
