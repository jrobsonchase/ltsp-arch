case "$MODE" in
    commandline)
        add_option "late-packages" "list of packages to install as part of the final installation." "advanced" "true"
        ;;
    configure)
        if [ -n "$option_late_packages_value" ]; then
            LATE_PACKAGES="$option_late_packages_value"
        fi
        ;;
    finalization)
        LC_ALL=C chroot $ROOT apt-get $APT_GET_OPTS install $LATE_PACKAGES
        ;;
esac
