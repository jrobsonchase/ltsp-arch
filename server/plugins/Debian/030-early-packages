case "$MODE" in
    commandline)
        add_option "early-packages" $"set the list of packages to install after base-install is completed." "advanced" "true"
        ;;
    configure)
        if [ -n "$option_early_packages_value" ]; then
            EARLY_PACKAGES="$option_early_packages_value"
        fi
        ;;
    after-install)
        LC_ALL=C chroot $ROOT apt-get $APT_GET_OPTS install $EARLY_PACKAGES
        ;;
esac
