case "$MODE" in
    configure)
        ARCH=$(dpkg --print-architecture)
        APT_GET_OPTS="-y"

	DIST=dapper
	MIRROR=http://archive.ubuntu.com/ubuntu
	COMPONENTS="main restricted"
	EARLY_PACKAGES="x-window-system-core ltsp-client discover1 laptop-detect xresprobe esound inputattach usplash ldm"
	RCS_WHITELIST="mountkernfs.sh mountvirtfs hostname.sh keymap.sh loopback udev mountdevsubfs.sh mountdevsubfs module-init-tools procps.sh etc-setserial ltsp-client-setup setserial console-screen.sh xorg-common x11-common xfree86-common ifupdown networking"
	RC2_WHITELIST="ltsp-client nbd-client usplash rmnologin"
        ;;
    after-install|finalization)
	# Our code to hanlding after-install and finalization is
	# exactly the same of Debian so we include it here.
	. ../Debian/000-basic-configuration
	;;
esac
