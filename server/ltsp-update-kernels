#!/bin/sh

set -e

TFTPBOOT=/var/lib/tftpboot/ltsp
PXECFG=$TFTPBOOT/pxelinux.cfg
LTSPROOT=/opt/ltsp

for file in $LTSPROOT/*/boot/vmlinuz* $LTSPROOT/*/boot/initramfs.cpio.gz*; do
    cp -a -v "$file" $TFTPBOOT
done

cp /usr/lib/syslinux/pxelinux.0 $TFTPBOOT
if [ ! -d $PXECFG ]; then
    mkdir $PXECFG
fi
cat > $PXECFG/default <<EOF
DEFAULT vmlinuz nfsroot=192.168.0.2:/opt/ltsp/i386 ro initrd=initramfs.cpio.gz
EOF

