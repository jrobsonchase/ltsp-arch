#!/bin/sh

clients=/opt/ltsp/i386
hostname=$(hostname)
ips=$(getent hosts $hostname | awk '$0 !~ /127.0.0.1/ { print $1 }')
output=$(tempfile)

names="$hostname $ips"

ssh-keyscan -t rsa,dsa $names > $output

for client in $clients; do
    install -m 644 $output $client/etc/ssh/ssh_known_hosts
done

rm -f $output

exit 0
